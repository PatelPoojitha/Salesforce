    <formulas>
        <name>Datetime_to_String_formula</name>
        <dataType>String</dataType>
        <expression>CASE(
MOD( DATEVALUE({!$Record.Enrollment_Call_Scheduled__c}) - DATE( 1900, 1, 8 ), 7 ),
0, &quot;Monday&quot;,
1, &quot;Tuesday&quot;,
2, &quot;Wednesday&quot;,
3, &quot;Thursday&quot;,
4, &quot;Friday&quot;,
5, &quot;Saturday&quot;,
&quot;Sunday&quot;
) &amp; &apos;, &apos; &amp; Text(MONTH(DATEVALUE({!$Record.Enrollment_Call_Scheduled__c}))) &amp; &apos;/&apos;&amp; Text(DAY(DATEVALUE({!$Record.Enrollment_Call_Scheduled__c}))) &amp; &apos;/&apos; &amp; Text(YEAR(DATEVALUE({!$Record.Enrollment_Call_Scheduled__c})))</expression>
    </formulas>
