    <formulas>
        <name>varActiveDate</name>
        <dataType>Date</dataType>
        <expression>if(isnew()&amp;&amp;isblank({!$Record.Active_Date__c}),Today(),{!$Record.Active_Date__c})</expression>
    </formulas>
    <formulas>
        <name>varInactiveDate</name>
        <dataType>Date</dataType>
        <expression>if(ischanged({!$Record.IsActive__c})&amp;&amp;NOT({!$Record.IsActive__c}),Today(),{!$Record.Inactive_Date__c})</expression>
    </formulas>
    <formulas>
        <name>varName</name>
