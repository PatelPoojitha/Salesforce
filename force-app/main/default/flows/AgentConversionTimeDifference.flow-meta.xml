    <decisions>
        <description>Checks if Accept Date is Null</description>
        <name>Check_Accept_Time</name>
        <label>Check Accept Time</label>
        <locationX>314</locationX>
        <locationY>431</locationY>
        <defaultConnector>
            <isGoTo>true</isGoTo>
            <targetReference>Actual_Time_Assignment_Zero</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>IsNotNull</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Agent_Work_Record.AcceptDateTime</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Actual_Time_Assignment</targetReference>
            </connector>
            <label>IsNotNull</label>
        </rules>
        <rules>
            <name>IsNull</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Agent_Work_Record.AcceptDateTime</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Actual_Time_Assignment_Zero</targetReference>
            </connector>
            <label>IsNull</label>
        </rules>
    </decisions>
    <description>This flow Calculates the Actual Conversion Time of Chat Transcript</description>
    <environments>Default</environments>
    <formulas>
        <name>ConversionTimeDifference</name>
        <dataType>Number</dataType>
        <expression>({!$Record.EndTime} - {!Get_Agent_Work_Record.AcceptDateTime})*24*60*60</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>AgentConversionTimeDifference {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Chat Transcript_Agent Chat Conversion Time</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Gets Agent Work Record of Chat Transcript</description>
        <name>Get_Agent_Work_Record</name>
        <label>Get Agent Work Record</label>
        <locationX>314</locationX>
        <locationY>323</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Check_Accept_Time</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Fault_Mail</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>WorkItemId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>AgentWork</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>AcceptDateTime</queriedFields>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <description>Updates the Actual Conversion Time with value inside of VarTimeDiff Value</description>
        <name>Update_Actual_Conversion_Time</name>
        <label>Update Actual Conversion Time</label>
        <locationX>314</locationX>
        <locationY>731</locationY>
        <faultConnector>
            <targetReference>Fault_Mail2</targetReference>
        </faultConnector>
        <inputAssignments>
            <field>Actual_Conversion_Time__c</field>
            <value>
                <elementReference>VarTimeDIff</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Agent_Work_Record</targetReference>
        </connector>
        <filterFormula>AND(
    ISPICKVAL({!$Record.Status}, &quot;Completed&quot;),
    ({!$CustomMetadata.Flow_Control__mdt.Chat_Transcript_AgentChatConversion_Time.Turn_Off__c}=False)
)</filterFormula>
        <object>LiveChatTranscript</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
